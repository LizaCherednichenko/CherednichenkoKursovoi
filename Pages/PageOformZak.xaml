<Page x:Class="CherednichenkoKursovoi.Pages.PageOformZak"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CherednichenkoKursovoi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageOformZak">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" Height="30">
                <TextBlock Width="200" Text="Рейс"/>
                <ComboBox Width="200" x:Name="CBReis" SelectedItem="{Binding Reis}" DisplayMemberPath="{Binding Number}"/>
                <Button x:Name="BtnReis" Content="Посмотреть список рейсов" Click="BtnReis_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" Height="30">
                <TextBlock Width="200" Text="Пассажир"/>
                <ComboBox Width="200" x:Name="CBPass" SelectedItem="{Binding Passajir}" DisplayMemberPath="{Binding Familia}"/>
                <Button x:Name="BtnPass" Content="Посмотреть список пассажиров" Click="BtnPass_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
