<Page x:Class="CherednichenkoKursovoi.Pages.PageHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CherednichenkoKursovoi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageHome">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Button x:Name="BtnInManager" Content="Войти как менеджер" Width="150" Height="40" Margin="5" Click="BtnInManager_Click"></Button>
            <Button x:Name="BtnInAdmin" Content="Войти как администратор" Width="150" Height="40" Margin="5" Click="BtnInAdmin_Click"></Button>
        </StackPanel>
        <Button x:Name="BtnOut" Content="Выход" Width="80" Height="30" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnOut_Click"></Button>
    </Grid>
</Page>
