<Page x:Class="CherednichenkoKursovoi.Pages.PageAutoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CherednichenkoKursovoi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAutoriz">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" Height="30">
                <TextBlock Width="130" Text="Введите логин" VerticalAlignment="Center"/>
                <TextBox Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center" Height="30">
                <TextBlock Width="130" Text="Введите пароль" VerticalAlignment="Center"/>
                <PasswordBox Width="200"/>
            </StackPanel>
            <Button x:Name="BtnEnter" Content="Войти" Click="BtnEnter_Click"/>
        </StackPanel>

    </Grid>
</Page>
