<Page x:Class="CherednichenkoKursovoi.Pages.PageAirplane"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CherednichenkoKursovoi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAirplane">

    <Grid>
        <DataGrid x:Name="DGAirplane" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Модель" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Количество мест" Binding="{Binding KolichMest}" Width="*"/>
                <DataGridTextColumn Header="Дополнительная иформация" Binding="{Binding info}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
